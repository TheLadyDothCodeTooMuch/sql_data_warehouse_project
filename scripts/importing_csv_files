-- Load Customer Information from the CRM source file

BULK INSERT bronze.crm_cust_info
FROM '\source_crm\cust_info.csv'
WITH (
    -- Defines that a comma is the character separating each column in the CSV.
    FIELDTERMINATOR = ',',
    -- Skip the header row in the CSV file
    FIRSTROW = 2,
    -- A performance optimization that locks the table during the bulk load, which can make the insert faster.
    TABLOCK
);


BULK INSERT bronze.crm_prd_info
FROM '\source_crm\prd_info.csv'
WITH (
    FIELDTERMINATOR = ',',
    -- Skip the header row in the CSV file
    FIRSTROW = 2,
    -- TABLOCK is used to improve bulk insert performance by acquiring a table-level lock
    TABLOCK
);

